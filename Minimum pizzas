#include <bits/stdc++.h>
#include<cmath>
using namespace std;

void solve(float n,float x){
    float req= n*x;
    float res= (n*x)/4;
    cout << ceil(res)<<endl;
}
int main()
{
    int t;
    cin >> t;
    while(t--){
    float n,x;
    cin >> n >> x;
    solve(n,x);}
    return 0;
}
